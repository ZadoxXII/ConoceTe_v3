@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ConoceTe | @ViewData["Title"]</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <link rel="shortcut icon" href="~/Complemento/image/iconos/Logo.png" />
    <link href="@Url.Content("~/Complemento/Scripts/plugins/jquery-ui/jquery-ui.min.css")" rel="stylesheet" type="text/css" />

    <!-- Primary Inspinia style -->
    @Styles.Render("~/font-awesome/css")
    @Styles.Render("~/Content/css")

    <!--Carga de Estilo Propio-->
    <link rel="stylesheet" href="~/Complemento/css/login.css" />

</head>
<body class="gray-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">
                    <img class="img-lg" src="~/Complemento/image/iconos/Logo.png" />
                </h1>
            </div>
            <h3>Bienvenido a ConoceTe</h3>
            <p>
                Inicie sesión.
            </p>
            <form class="m-t" role="form" method="post">
                <div class="form-group">
                    <img class="img-login" src="~/Complemento/image/iconos/User.png" />
                    <input type="email" class="form-control" id="email" name="email" placeholder="Correo Electrónico" maxlength=25 required>
                </div>
                <div class="form-group">
                    <img class="img-login" src="~/Complemento/image/iconos/Contrasenia.png" />
                    <input type="password" class="form-control" id="contra" name="contra" placeholder="Contraseña" maxlength=25 required>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Login</button>
            </form>
            <a href="@Url.Action("ForgotPassword", "Account")"><small>¿Se te olvidó tu contraseña?</small></a>
            <p class="text-muted text-center"><small>¿No tiene una cuenta?</small></p>
            <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Register", "Account" )">
                Crea una cuenta
            </a>
            <p class="m-t"> <small>ConoceTe &copy; 2020</small> </p>
        </div>
    </div>

    <!-- End wrapper-->
    <!-- Section for main scripts render -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/plugins/slimScroll")
    @Scripts.Render("~/bundles/inspinia")

    <!-- Skin config script - only for demo purpose-->
    @Scripts.Render("~/bundles/skinConfig")
</body>
</html>